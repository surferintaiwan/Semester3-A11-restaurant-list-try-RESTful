<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{value}}" aria-describedby="search-button" >
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row justify-content-end mb-4">
  <form action="/restaurants/sort" method="POST" class="col-3">
    <label for="sort">請選擇排序方式</label>
    <select name="sort" id="sort" class="form-control">
      <option value="name-asc" {{#if sort.asc}}selected{{/if}}>A-Z</option>
      <option value="name-desc" {{#if sort.desc}}selected{{/if}}>Z-A</option>
      <option value="location" {{#if sort.location}}selected{{/if}}>地區</option>
      <option value="category" {{#if sort.category}}selected{{/if}}>類別</option>
      <option value="rating-asc" {{#if sort.rating}}selected{{/if}}>評分 低>高</option>
      <option value="rating-desc" {{#if sort.rating}}selected{{/if}}>評分 高>低</option>
    </select>
  </form>
  </div>
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurant}}
        <div class="card mb-3">
          <a href="/restaurants/{{ this.id }}" class="text-secondary">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </a>
          <div class="text-right">
            <a href="/restaurants/{{this.id}}/edit" class="btn btn-secondary mr-1 mb-1">Edit</a>
            <a href="/restaurants/{{this.id}}" class="btn btn-secondary mr-1 mb-1">Detail</a>
              <form action="/restaurants/{{this.id}}?_method=DELETE" method="POST" class="form-for-delete">
                <button type="submit" class="btn btn-outline-warning mr-1 mb-1 delete-button">Delete</button>
              </form>
          </div>
        </div>  
        {{/each}}
      </div>
    </div>
  </div>
</div>